@model List<CollegeERPPortal.Application.DTOs.FacultyDto>

@{
    ViewData["Title"] = "Faculty List";
}

<h2>Faculty List</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Faculty</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
            <th>Join Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var faculty in Model)
        {
            <tr>
                <td>@faculty.Name</td>
                <td>@faculty.Department</td>
                <td>@faculty.Email</td>
                <td>@faculty.JoinDate.ToShortDateString()</td>
                <td><a asp-action="Edit" asp-route-id="@faculty.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@faculty.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
