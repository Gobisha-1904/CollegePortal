@model CollegeERPPortal.Application.DTOs.StudentDto

@{
    ViewData["Title"] = "Delete Student";
}

<h2>Are you sure you want to delete this Student ?</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Coures</dt>
        <dd class="col-sm-10">@Model.Course</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">DOB</dt>
        <dd class="col-sm-10">@Model.DOB.ToShortDateString()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
